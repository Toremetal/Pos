<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".ui.settings.SlideshowFragment"
    tools:keep="@layout/fragment_settings">

    <View
        style="@style/Divider"
        android:layout_marginTop="@dimen/margin_between_elements" />

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/messages_header"
        android:textSize="24sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:background="#DAE4E4E4"
        android:dividerPadding="8dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:hint="@string/sale_message"
        android:textColorHint="#930000"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="147dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="auto"
            android:fontFamily="casual"
            android:gravity="center"
            android:inputType="text"
            android:textSize="24sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:background="#DAE4E4E4"
        android:dividerPadding="8dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:hint="@string/signature_title"
        android:textColorHint="#930000"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="147dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="auto"
            android:fontFamily="casual"
            android:gravity="center"
            android:inputType="text"
            android:textSize="24sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        style="@style/Divider"
        android:layout_marginTop="@dimen/margin_between_elements" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/salesReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_between_elements"
        android:backgroundTint="#1976D2"
        android:drawableEnd="@drawable/ic_baseline_money_off_24"
        android:text="@string/reset_sales_logs" />
</LinearLayout>